<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ideaItemContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/home_screen_surface_color">

    <com.example.ui_kit.custom_views.PriorityIcon
        android:id="@+id/priorityIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/idea_recycler_view_item_padding_horizontal"
        android:paddingVertical="@dimen/idea_recycler_view_item_padding_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ideaText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:textSize="@dimen/idea_recycler_view_item_idea_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/priorityIcon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="DFSFllsfojl;j;lj;lj" />

    <TextView
        android:id="@+id/ideaDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/idea_recycler_view_item_data_padding_bottom"
        android:textColor="@color/text_color"
        android:textSize="@dimen/idea_recycler_view_item_data_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/priorityIcon"
        app:layout_constraintTop_toBottomOf="@+id/ideaText"
        tools:text="DFSFllsfojl;j;lj;lj" />

</androidx.constraintlayout.widget.ConstraintLayout>